extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    form
      span
        label(for='name') Category:
        input(
          type='text' 
          placeholder='Meat, fruit, toys...' 
          name='name' 
          id='name'
          value=(undefined===category ? '' : category.name)
          required='true'
        )
      button(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg