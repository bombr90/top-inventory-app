html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div(class='container')
      nav
        block navigation
          ul
            li
              a(href='/inventory') Home
            li
              a(href='/inventory/items') All Items
